/* 隐藏滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 清空button默认样式 */

.btn-reset {
  padding-left: 0;
  padding-right: 0;
  margin-left: 0;
  margin-right: 0;
  background: none;
  border-radius: 0;
}

.btn-reset::after {
  border: none;
}
img{
  display: block;
}
/* 遮罩层 */
.zhezhao{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(00, 00, 00, 0.7);
  z-index: 333;
}